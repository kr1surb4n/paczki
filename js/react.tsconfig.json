{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": ["node", "jest"],
    "jsx": "react",
    "rootDir": "./resources/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./resources/js/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "jest.config.ts"]
}
